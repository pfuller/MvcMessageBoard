@model IEnumerable<MessageBoardWebApp.Data.Topic>
@{
    ViewBag.Title = "Home Page";
}


<div class="message-header">
    <h1>Message Board</h1>
    <p class="lead">Latest Messages</p>
</div>

<!-- 
.messages>(.message.row>(.title.span10>lorem5)+(.date.span2>{12 Feb 2018 })+(.contents.span12>lorem)+(.toolbar.span12>button.btn.btn-primary.reply-button.{Reply})+.replies.span12)*5 -->


@foreach (var topic in Model)
{
    <div class="messages">
        <div class="message row">
            <div class="title span10">@topic.Title</div>
            <div class="date span2">@topic.Created.ToShortDateString()</div>
            <div class="contents span12">@topic.Body</div>
            <div class="toolbar span12"><button class="btn btn-primary reply-button ">Reply</button></div>
            @foreach(var reply in topic.Replies) {
                <div class="replies span12">
                    <div class="reply">
                        <div class="created pull-right">@reply.Created.ToShortDateString()</div>
                        <div class="content">@reply.Body</div>
                    </div>
                </div>
             }
        </div>
    </div>
}